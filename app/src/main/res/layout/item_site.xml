<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription=""
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_action_discard"
        android:id="@+id/discardButton"
        android:paddingBottom="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_action_edit"
        android:id="@+id/editButton"
        android:layout_below="@id/discardButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textView1"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_above="@+id/editButton"
        android:layout_toStartOf="@+id/discardButton"
        android:layout_toEndOf="@+id/imageView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textView2"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_toEndOf="@+id/imageView1"
        android:layout_alignBottom="@+id/editButton"
        android:layout_alignStart="@+id/textView"
        android:layout_toStartOf="@+id/editButton"
        android:layout_below="@+id/discardButton" />

</RelativeLayout>
